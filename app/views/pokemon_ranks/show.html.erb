<h1><%= @pokemon_rank.name %> pokemons</h1>
<div>
    <ol class="pokemon-container">
        <% @pokemon_infos.each do |rank| %>
            <li class="pokemon-name">
                <%= link_to (rank) do %>
                    <%= image_tag "#{rank.id}.png", class: "pokemon-image", alt: "#{rank.name} image" %>
                    <%= rank.name %>
                <% end %>
            </li>
        <% end %>
    </ol>
    <div class="pagination">
        <%= paginate @pokemon_infos %>
    </div>
</div>